@model AssignmentFormViewModel


<div class="assignmentModal">
    <div class="gridListContent">
        <div>
            @await Html.PartialAsync("Partials/CustomerForm", Model.Kunden)
        </div>
        <div>
            @await Html.PartialAsync("Partials/ShareholderForm", Model.Gesellschafter)
        </div>
    </div>
    <div>
        @await Html.PartialAsync("Partials/PositionListForm", Model.Artikel)
    </div>
    <div class="gridListContent">
        @await Html.PartialAsync("Partials/BonusForm", Model.Bonus)
    </div>
    <div>
        @await Html.PartialAsync("Partials/NoticeForm", Model.Notice)
    </div>
    <div class="gridListContent">
        <a class="btn btn-outline-danger" asp-controller="Home" asp-action="Dashboard">Auftrag anlegen (FAKE)</a>
    </div>
    <div>
        @Html.DisplayFor(modelItem => Model.Vertriebsmitarbeiter, "SalesStaffInformation")
    </div>
</div>