@model Auftragsstatus?
@{
    var statusString = string.Empty;

    switch (Model)
    {
        case Auftragsstatus.Erfasst:
            statusString = "Erfasst";
            break;
        case Auftragsstatus.Geprueft:
            statusString = "Geprüft";
            break;
        case Auftragsstatus.Erledigt:
            statusString = "Erledigt";
            break;
        case Auftragsstatus.Storniert:
            statusString = "Storniert";
            break;
        default:
            statusString = "Unbekannt";
            break;
    }
}

@statusString